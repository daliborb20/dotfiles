# vim: syntax=sh

# Location for custom bas config scripts
CONFIG_DIR=$HOME/.dotfiles/terminal

# Programming language specific settings
. $CONFIG_DIR/php
. $CONFIG_DIR/python
. $CONFIG_DIR/ruby
. $CONFIG_DIR/node
. $CONFIG_DIR/go

# Terminal settings
. $CONFIG_DIR/$MY_SHELL"_only"
. $CONFIG_DIR/aliases

# Default Editor
export EDITOR='vim'

vim()
{
    # osx users, use stty -g
    local STTYOPTS="$(stty -g)"
    #local STTYOPTS="$(stty --save)"
    stty stop '' -ixoff
    command vim "$@"
    stty "$STTYOPTS"
}
